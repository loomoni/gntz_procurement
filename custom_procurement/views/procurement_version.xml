                    <!--                                </tree>-->
                    <!--                            </field>-->
                    <!--                        </page>-->
                    <!--                        <page string="Procurement Commitee Minutes" groups="procurement_plan.procurement_pc,procurement_plan.procurement_es" attrs="{'invisible': [('state', 'in', ['submit','draft'])]}">-->
                    <!--                          <group string="Minutes">-->
