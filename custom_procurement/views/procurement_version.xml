<odoo>

    <record id="procurement_version_tree_view" model="ir.ui.view">
        <field name="name">procurement.version.tree.view</field>
        <field name="model">procurement.plan.version</field>
        <field name="arch" type="xml">
            <tree string="Procurement Version">
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="procurement_version_search_view" model="ir.ui.view">
        <field name="name">procurement.version.search.view</field>
        <field name="model">procurement.plan.version</field>
        <field name="arch" type="xml">
            <search string="procurement version search">
                <field name="name" string="Version" filter_domain="[('name','ilike',self)]"/>
            </search>
        </field>
    </record>

    <record id="procurement_version_form_view" model="ir.ui.view">
        <field name="name">procurement.version.form.view</field>
        <field name="model">procurement.plan.version</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="button_release" states="draft" string="Start Department Procument Planning"
                            type="object" class="oe_highlight"
                            groups="custom_procurement.procurement_manager"/>

                    <button name="button_cancel" states="draft,released" string="Cancel" type="object"
                            groups="procurement_plan.procurement_pc,procurement_plan.procurement_manager"/>
                    <button name="button_reset" states="approved,advised,cancel,reject" string="Move Back To Draft"
                            type="object"
                            groups="procurement_plan.procurement_pc,procurement_plan.procurement_manager"/>
                    <button name="button_close" states="released,approved" string="Close" type="object"
                            groups="procurement_plan.procurement_pc,procurement_plan.procurement_manager"/>
                    <button name="button_approve" states="advised" string="ES Approve" type="object"
                            groups="procurement_plan.procurement_manager"/>
                    <button name="button_advise" states="released" string="PC Recommend" type="object"
                            groups="procurement_plan.procurement_pc,procurement_plan.procurement_manager"/>
                    <button name="button_reject" states="released" string="Reject" type="object"
                            groups="procurement_plan.procurement_pc,procurement_plan.procurement_manager"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,released,advised,approved,closed,reject,cancel"/>
                </header>
                <sheet>

                    <div name="buttons" class="oe_right oe_button_box">
