<odoo>
    <data>
        <template id="website_tender_template" name="Tenders">
            <link rel="stylesheet" type="text/css" href="/custom_tenders/static/src/css/custom_styles.css"/>
            <t t-call="website.layout">
                <div class="container"
                     style="max-width: 1000px; margin-top: 10px;  margin-bottom: 10px; padding: 20px; background-color: #f5f5f5;">
                    <h1 style="font-size: 25px; color: #89A130; text-align: center">TENDERS</h1>
                    <t t-foreach="docs" t-as="doc">
                        <div class="tender-box"
                             style="border: 1px solid #ddd;  padding: 20px; margin-bottom: 20px; background-color: #fff;">
                            <h2 style="font-size: 20px;color: #555;">
                                <a style="color: #00A09D;" t-att-href="'/tenders/' + str(doc.id)">
                                    <t t-esc="doc.name"/>
                                </a>
                            </h2>
                            <p style="font-size: 16px; color: #777;">
                                <i class="fa fa-clock-o">Open Date:
                                    <t t-esc="doc.date"/>
                                    - Close Date:
                                    <t t-esc="doc.end_date"/>
                                </i>
                            </p>
                        </div>
                    </t>
                </div>
            </t>
        </template>
    </data>
</odoo>
